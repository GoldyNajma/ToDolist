<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.to_dolist.MainActivity">

    <LinearLayout
        android:id="@+id/inputLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:inputType="text"
            android:hint="@string/inputEditTextHint"
            android:textColorHint="@color/grey888"/>

        <Button
            android:id="@+id/inputButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/inputButtonText" />
    </LinearLayout>

    <ListView
        android:id="@+id/toDoListListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
